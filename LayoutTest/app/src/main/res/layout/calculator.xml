<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/my_text_color"
        android:gravity="right|bottom"
        android:padding="10dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="70sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/gray_divider"
        android:orientation="vertical"
        android:padding="@dimen/my_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="AC"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="+/-"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="%"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>


            <Button
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/my_orange"
                android:text="รท"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="7"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="8"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="9"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>


            <Button
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/my_orange"
                android:text="ร"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="4"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="5"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="6"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>


            <Button
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/my_orange"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="1"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="2"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="3"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>


            <Button
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/my_orange"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="2"
                android:background="@color/gray_highlight"
                android:text="0"
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_weight="1"
                android:background="@color/gray_highlight"
                android:text="."
                android:textColor="@color/my_text_color"
                android:textSize="@dimen/my_text_size"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/my_orange"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="@dimen/my_text_size"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>