<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="charlezz.bluetoothtest.ble.central.BleActivity">

    <Button
        android:id="@+id/scanLe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start scan" />

    <Button
        android:id="@+id/stopLe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop scan" />

    <Button
        android:id="@+id/peripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start advertising" />

    <Button
        android:id="@+id/stopPeripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop advertising" />

    <Button
        android:id="@+id/openGattServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open Gatt Server" />

    <Button
        android:id="@+id/closeGattServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close Gatt Server" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50" />

    <Button
        android:id="@+id/notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notify" />

</LinearLayout>
