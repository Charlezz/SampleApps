<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="charlezz.bluetoothtest.BleActivity">

    <Button
        android:id="@+id/scanLe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan Le" />

    <Button
        android:id="@+id/stopLe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop scan" />

    <Button
        android:id="@+id/peripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="peripheral"/>

    <Button
        android:id="@+id/stopPeripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stpp peripheral"/>

</LinearLayout>
